@page "/projects/{id:int}"
@using Frontend.Services
@using Shared.DTOs
@attribute [Authorize]
@inject IProjectService ProjectService
@inject NavigationManager Navigation

<PageTitle>Project Details</PageTitle>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (project == null)
{
    <div class="alert alert-danger">Project not found</div>
}
else
{
    <div class="mb-3">
        <a href="/projects" class="btn btn-secondary">Back to Projects</a>
    </div>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3>@project.Name</h3>
            <span class="badge bg-@GetStatusColor(project.Status) fs-6">@project.Status</span>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Project Information</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Project Link:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(project.ProjectLink))
                            {
                                <a href="@project.ProjectLink" target="_blank">@project.ProjectLink</a>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@(project.Description ?? "N/A")</dd>

                        <dt class="col-sm-4">Approver:</dt>
                        <dd class="col-sm-8">@project.ApproverName</dd>

                        <dt class="col-sm-4">Milestones:</dt>
                        <dd class="col-sm-8">@project.Milestones.Count / @project.NumberOfMilestones</dd>

                        <dt class="col-sm-4">Created By:</dt>
                        <dd class="col-sm-8">@project.CreatedByUserName</dd>

                        <dt class="col-sm-4">Created:</dt>
                        <dd class="col-sm-8">@project.CreatedAt.ToString("MMM dd, yyyy")</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <h5>Milestones Progress</h5>
                    @if (project.Milestones.Any())
                    {
                        var achievedCount = project.Milestones.Count(m => m.IsAchieved);
                        var approvedCount = project.Milestones.Count(m => m.IsApproved);
                        var progressPercentage = (double)achievedCount / project.NumberOfMilestones * 100;

                        <div class="mb-3">
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar" role="progressbar" style="width: @progressPercentage%" 
                                     aria-valuenow="@achievedCount" aria-valuemin="0" aria-valuemax="@project.NumberOfMilestones">
                                    @achievedCount / @project.NumberOfMilestones
                                </div>
                            </div>
                        </div>

                        <ul class="list-unstyled">
                            <li><strong>Achieved:</strong> @achievedCount</li>
                            <li><strong>Approved:</strong> @approvedCount</li>
                            <li><strong>Pending:</strong> @(project.Milestones.Count - achievedCount)</li>
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No milestones created yet</p>
                    }

                    <a href="/projects/@Id/milestones" class="btn btn-primary">Manage Milestones</a>
                </div>
            </div>

            @if (project.Attachments.Any())
            {
                <hr />
                <h5>Attachments</h5>
                <ul class="list-group">
                    @foreach (var attachment in project.Attachments)
                    {
                        <li class="list-group-item">
                            <strong>@attachment.FileName</strong>
                            <small class="text-muted">(@FormatFileSize(attachment.FileSize))</small>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private ProjectDto? project;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadProject();
    }

    private async Task LoadProject()
    {
        isLoading = true;
        project = await ProjectService.GetProject(Id);
        isLoading = false;
    }

    private string GetStatusColor(string status)
    {
        return status switch
        {
            "Pending" => "warning",
            "InProgress" => "info",
            "Completed" => "success",
            "Rejected" => "danger",
            _ => "secondary"
        };
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}
